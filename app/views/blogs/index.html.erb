<div id="page-title">
  <div id="page-title-inner">
    <div class="container">
      <h2><i class="ico-keynote"></i>Dagboek</h2>
    </div>
  </div>  
</div>

<div id="wrapper">
  
  <div class="container">
  <hr>

    <% unless @blogs.empty? %>

      <div id="portfolio-wrapper" class="row isotope">

        <% @blogs.each do |blog| %>
                
          <div class="span4 portfolio-item nature people isotope-item">
            <% unless blog.pictures.empty? %>
              <div class="picture"><%= image_tag(blog.pictures.last.image) %>
            <% else %>
              <div class="picture"><%= image_tag(Picture.last.image) %>
            <% end %>
              <div class="item-description alt">
                <h5><strong><%= truncate(blog.title, length: 55) %></strong></h5>
                <p>
                  <%= truncate(blog.body, length: 400) %>
                </p>
                <%= link_to 'Lees meer...', blog_path(blog), class: "post-entry", method: :get %> 
              </div>
              <div class="post-meta">
                <span><i class="mini-ico-calendar"></i><%= blog.created_at.to_s(:short) %></span>
              </div>
            </div>
          </div>

        <% end %>

      </div>

      <%= will_paginate @blogs %>

    <% else %>
      Er zijn nog geen verhalen toegevoegd.
    <% end %>

    <% if admin_signed_in? %>
      <%= button_to 'Voeg nieuw verhaal toe', new_blog_path, id: "comment_button", method: :get %>
    <% end %>
    <hr>

  </div>

</div>