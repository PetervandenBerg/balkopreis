
<div id="wrapper-home">
  <div class="container", style="min-height: 680px">

    <div class="clearfix"></div>

    <!-- start: Row -->
    <div class="row">

      <div class="span3", style="margin-top: 33px; margin-bottom: 300px; float: right">
        <div class="post">
          <div class="title">
            <h5><strong>Laatste verhalen</strong></h5>
            <ul>
              <% Blog.order('created_at DESC').last(10).each do |blog| %>
                <li class="blog_item"><%= link_to truncate(blog.title, length: 30), blog_path(blog) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

	</div>
</div>
