<% markdown = Redcarpet::Markdown.new(Redcarpet::Render::HTML, autolink: true, tables: true) %>

<div id="wrapper">
  <div class="container">

    <div class="clearfix"></div>

    <!-- start: Row -->
    <div class="row", style="margin-top:40px">

      <% @preparations.each do |preparation| %>

        <div class="span12">
          <div class="post post-page", style="margin-bottom: 10px">

            <div class="post-content">
              <div class="post-title">
                <h2><strong><%= preparation.title %></strong></h2>
              </div>
              <div class="post-description">
                <%=raw markdown.render(preparation.body) %>
              </div>
              <div class="post-meta">
                <span><i class="mini-ico-calendar"></i>Toegevoegd op: <%= preparation.created_at.to_s(:short) %></span>
                <% if admin_signed_in? %>
                  <%= link_to 'Destroy', preparation, method: :delete, data: { confirm: 'Are you sure?' } %> 
                <% end %>
              </div>
            </div>

          </div>
        </div>

      <% end %>

      <% if admin_signed_in? %>
        <%= button_to 'Voeg nieuwe voorbereiding toe', new_preparation_path, id: "comment_button", method: :get %>
      <% end %>

  </div>
</div>
